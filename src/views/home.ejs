<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Event & Volunteer Platform</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="hero">
      <div class="container">
        <div class="row align-items-center g-4">
          <div class="col-lg-6 fade-up">
            <span class="hero-tag">Community Powered Events</span>
            <h1 class="display-5 fw-bold mt-3">Plan events that mobilize volunteers in minutes.</h1>
            <p class="lead mt-3">PulseBridge helps organizations publish events, recruit volunteers, and track impact in one clean workspace.</p>
            <div class="d-flex gap-3 mt-4">
              <% if (currentUser) { %>
                <a class="btn btn-coral btn-lg" href="/events/new">Create Event</a>
              <% } else { %>
                <a class="btn btn-coral btn-lg" href="/register">Get Started</a>
              <% } %>
              <a class="btn btn-outline-dark btn-lg" href="/events">Browse Events</a>
            </div>
          </div>
          <div class="col-lg-6 fade-up fade-delay-1">
            <div class="hero-card">
              <h4 class="section-title">Impact Snapshot</h4>
              <div class="stat-grid">
                <div class="stat-card">
                  <div class="text-uppercase small">Users</div>
                  <h3 class="fw-bold"><%= stats.users %></h3>
                </div>
                <div class="stat-card">
                  <div class="text-uppercase small">Organizations</div>
                  <h3 class="fw-bold"><%= stats.organizations %></h3>
                </div>
                <div class="stat-card">
                  <div class="text-uppercase small">Posts</div>
                  <h3 class="fw-bold"><%= stats.posts %></h3>
                </div>
                <div class="stat-card">
                  <div class="text-uppercase small">Subscriptions</div>
                  <h3 class="fw-bold"><%= stats.subscriptions %></h3>
                </div>
              </div>
              <div class="gradient-band mt-4">
                <strong>Next Event:</strong>
                <%= events[0] ? `${events[0].title} · ${formatDate(events[0].startDate)}` : 'Create your first event' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="section-title mb-0">Featured Events</h2>
          <a href="/events" class="text-decoration-none">View all</a>
        </div>
        <div class="row g-4">
          <% if (!events.length) { %>
            <div class="col-12">
              <div class="event-card">No events yet. Be the first to create one.</div>
            </div>
          <% } %>
          <% events.forEach((event) => { %>
            <div class="col-md-6 col-lg-3 fade-up">
              <div class="event-card">
                <% const eventImage = event.imageUrl && event.imageUrl.startsWith('http') ? event.imageUrl : `/uploads/${event.imageUrl}`; %>
                <img class="event-image" src="<%= eventImage %>" alt="<%= event.title %>" />
                <h5 class="mt-2"><%= event.title %></h5>
                <div class="event-meta"><%= formatDate(event.startDate) %></div>
                <% if (event.owner) { %>
                  <% const ownerAvatar = event.owner.avatar && event.owner.avatar.startsWith('http') ? event.owner.avatar : `/uploads/${event.owner.avatar || 'default.png'}`; %>
                  <div class="inline-avatar mt-2">
                    <img class="avatar-mini" src="<%= ownerAvatar %>" alt="<%= event.owner.username %>" />
                    <span class="text-muted">By</span>
                    <a href="/users/<%= event.owner._id %>"><%= event.owner.username %></a>
                  </div>
                <% } %>
                <a class="btn btn-outline-dark btn-sm mt-3" href="/events/<%= event._id %>">View Event</a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        PulseBridge © 2026 · Event & Volunteer Platform
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Posts</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="section-title mb-0">Impact Posts</h2>
          <% if (currentUser) { %>
            <a class="btn btn-coral" href="/posts/new">Create Post</a>
          <% } %>
        </div>
        <div class="row g-4">
          <% if (!posts.length) { %>
            <div class="col-12">
              <div class="event-card">No posts yet.</div>
            </div>
          <% } %>
          <% posts.forEach((post) => { %>
            <div class="col-md-6 col-lg-4 fade-up">
              <div class="event-card">
                <h5><%= post.title %></h5>
                <% if (post.author) { %>
                  <% const authorAvatar = post.author.avatar && post.author.avatar.startsWith('http') ? post.author.avatar : `/uploads/${post.author.avatar || 'default.png'}`; %>
                  <div class="inline-avatar mb-2">
                    <img class="avatar-mini" src="<%= authorAvatar %>" alt="<%= post.author.username %>" />
                    <span class="text-muted">By</span>
                    <a href="/users/<%= post.author._id %>"><%= post.author.username %></a>
                  </div>
                <% } %>
                <% if (post.event) { %>
                  <p class="event-meta">Event: <a href="/events/<%= post.event._id %>"><%= post.event.title %></a></p>
                <% } %>
                <p><%= post.content.length > 140 ? post.content.slice(0, 140) + '...' : post.content %></p>
                <a class="btn btn-outline-dark btn-sm" href="/posts/<%= post._id %>">Read Post</a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Posts capture the impact of community events.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <div class="row g-4 align-items-stretch">
          <div class="col-lg-6 fade-up">
            <div class="form-panel h-100">
              <h2 class="section-title">Login</h2>
              <p class="text-muted">Access your volunteer dashboard and manage events.</p>
              <% if (message) { %>
                <div class="alert alert-success"><%= message %></div>
              <% } %>
              <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
              <% } %>
              <form id="loginForm" action="/login" method="POST" novalidate>
                <div class="mb-3">
                  <label class="form-label" for="loginEmail">Email</label>
                  <input id="loginEmail" name="email" type="email" class="form-control <%= errors.email ? 'is-invalid' : '' %>" placeholder="you@example.com" value="<%= values.email || '' %>" required />
                  <div class="invalid-feedback"><%= errors.email || 'Введите корректный email.' %></div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="loginPassword">Password</label>
                  <input id="loginPassword" name="password" type="password" class="form-control <%= errors.password ? 'is-invalid' : '' %>" placeholder="••••••••" required minlength="8" />
                  <div class="invalid-feedback"><%= errors.password || 'Пароль минимум 8 символов.' %></div>
                </div>
                <button type="submit" class="btn btn-coral w-100">Sign In</button>
                <p class="mt-3 mb-0">No account? <a href="/register">Create one here</a>.</p>
              </form>
            </div>
          </div>
          <div class="col-lg-6 fade-up fade-delay-1">
            <div class="form-panel h-100">
              <h2 class="section-title">Welcome Back</h2>
              <p class="text-muted">Secure access to your events and volunteer shifts.</p>
              <ul class="list-unstyled mb-0">
                <li class="mb-2">Manage your events and teams.</li>
                <li class="mb-2">Track your volunteer impact.</li>
                <li class="mb-2">Publish recap posts.</li>
                <li>Update your profile details anytime.</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Need help? Email support@pulsebridge.org
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

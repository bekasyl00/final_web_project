<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Organization</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="row g-4">
          <div class="col-lg-7 fade-up">
            <div class="event-card">
              <% const orgImage = organization.imageUrl && organization.imageUrl.startsWith('http') ? organization.imageUrl : `/uploads/${organization.imageUrl || 'default.png'}`; %>
              <img class="event-image" src="<%= orgImage %>" alt="<%= organization.name %>" />
              <h2 class="section-title"><%= organization.name %></h2>
              <p><%= organization.description || 'No description yet.' %></p>
              <% if (organization.owner) { %>
                <% const ownerAvatar = organization.owner.avatar && organization.owner.avatar.startsWith('http') ? organization.owner.avatar : `/uploads/${organization.owner.avatar || 'default.png'}`; %>
                <div class="inline-avatar">
                  <img class="avatar-mini" src="<%= ownerAvatar %>" alt="<%= organization.owner.username %>" />
                  <strong>Owner:</strong>
                  <a href="/users/<%= organization.owner._id %>"><%= organization.owner.username %></a>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col-lg-5 fade-up fade-delay-1">
            <div class="event-card">
              <h4 class="section-title">Actions</h4>
              <% if (canEdit) { %>
                <a class="btn btn-outline-dark w-100 mb-2" href="/organizations/<%= organization._id %>/edit">Edit Organization</a>
              <% } %>
              <% if (canDelete) { %>
                <form action="/organizations/<%= organization._id %>/delete" method="POST">
                  <button type="submit" class="btn btn-coral w-100">Delete Organization</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>

        <div class="mt-5">
          <h3 class="section-title">Events by this Organization</h3>
          <div class="row g-4">
            <% if (!events.length) { %>
              <div class="col-12">
                <div class="event-card">No events yet.</div>
              </div>
            <% } %>
            <% events.forEach((event) => { %>
              <div class="col-md-6 col-lg-4 fade-up">
                <div class="event-card">
                  <% const eventImage = event.imageUrl && event.imageUrl.startsWith('http') ? event.imageUrl : `/uploads/${event.imageUrl}`; %>
                  <img class="event-image" src="<%= eventImage %>" alt="<%= event.title %>" />
                  <h5><%= event.title %></h5>
                  <p class="event-meta"><%= event.startDate ? event.startDate.toDateString() : '-' %></p>
                  <% if (event.owner) { %>
                    <% const eventOwnerAvatar = event.owner.avatar && event.owner.avatar.startsWith('http') ? event.owner.avatar : `/uploads/${event.owner.avatar || 'default.png'}`; %>
                    <div class="inline-avatar mt-2">
                      <img class="avatar-mini" src="<%= eventOwnerAvatar %>" alt="<%= event.owner.username %>" />
                      <a href="/users/<%= event.owner._id %>"><%= event.owner.username %></a>
                    </div>
                  <% } %>
                  <a class="btn btn-outline-dark btn-sm" href="/events/<%= event._id %>">View Event</a>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
        <div class="mt-5">
          <h3 class="section-title">Members</h3>
          <div class="row g-3">
            <% if (!organization.members || !organization.members.length) { %>
              <div class="col-12">
                <div class="event-card">No members yet.</div>
              </div>
            <% } %>
            <% organization.members.forEach((member) => { %>
              <% const memberAvatar = member.avatar && member.avatar.startsWith('http') ? member.avatar : `/uploads/${member.avatar || 'default.png'}`; %>
              <div class="col-md-4">
                <div class="event-card d-flex align-items-center gap-3">
                  <img class="avatar-mini" src="<%= memberAvatar %>" alt="<%= member.username %>" />
                  <a href="/users/<%= member._id %>"><%= member.username %></a>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Organizations group events and volunteers.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

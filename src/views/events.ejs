<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Events</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="section-title mb-0">All Events</h2>
          <% if (currentUser) { %>
            <a class="btn btn-coral" href="/events/new">New Event</a>
          <% } %>
        </div>
        <div class="row g-4">
          <% if (!events.length) { %>
            <div class="col-12">
              <div class="event-card">No events yet. Be the first to create one.</div>
            </div>
          <% } %>
          <% events.forEach((event) => { %>
            <div class="col-md-6 col-lg-4 fade-up">
              <div class="event-card">
                <% const eventImage = event.imageUrl && event.imageUrl.startsWith('http') ? event.imageUrl : `/uploads/${event.imageUrl}`; %>
                <img class="event-image" src="<%= eventImage %>" alt="<%= event.title %>" />
                <h5 class="mt-2"><%= event.title %></h5>
                <div class="event-meta"><%= formatDate(event.startDate) %></div>
                <% if (event.owner) { %>
                  <% const ownerAvatar = event.owner.avatar && event.owner.avatar.startsWith('http') ? event.owner.avatar : `/uploads/${event.owner.avatar || 'default.png'}`; %>
                  <div class="inline-avatar mt-2">
                    <img class="avatar-mini" src="<%= ownerAvatar %>" alt="<%= event.owner.username %>" />
                    <span class="text-muted">By</span>
                    <a href="/users/<%= event.owner._id %>"><%= event.owner.username %></a>
                  </div>
                <% } %>
                <% if (event.organization) { %>
                  <% const orgAvatar = event.organization.imageUrl && event.organization.imageUrl.startsWith('http') ? event.organization.imageUrl : `/uploads/${event.organization.imageUrl || 'default.png'}`; %>
                  <div class="inline-avatar mt-2">
                    <img class="avatar-mini" src="<%= orgAvatar %>" alt="<%= event.organization.name %>" />
                    <span class="text-muted">Org</span>
                    <a href="/organizations/<%= event.organization._id %>"><%= event.organization.name %></a>
                  </div>
                <% } %>
                <p class="mt-3"><%= event.description.length > 140 ? event.description.slice(0, 140) + '...' : event.description %></p>
                <a class="btn btn-outline-dark btn-sm mt-2" href="/events/<%= event._id %>">View Details</a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Browse all upcoming events and community actions.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

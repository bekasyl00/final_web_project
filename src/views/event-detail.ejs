<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Event Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (event) { %>
          <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-success"><%= message %></div>
          <% } %>
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <div class="row g-4">
            <div class="col-lg-7 fade-up">
              <div class="event-card">
                <% const eventImage = event.imageUrl && event.imageUrl.startsWith('http') ? event.imageUrl : `/uploads/${event.imageUrl}`; %>
                <img class="event-image" src="<%= eventImage %>" alt="<%= event.title %>" />
                <h2 class="section-title"><%= event.title %></h2>
                <p class="event-meta"><strong>Date:</strong> <%= formatDate(event.startDate) %></p>
                <% if (event.endDate) { %>
                  <p class="event-meta"><strong>End:</strong> <%= formatDate(event.endDate) %></p>
                <% } %>
                <% if (event.organization) { %>
                  <% const orgImage = event.organization.imageUrl && event.organization.imageUrl.startsWith('http') ? event.organization.imageUrl : `/uploads/${event.organization.imageUrl || 'default.png'}`; %>
                  <div class="inline-avatar mt-2">
                    <img class="avatar-mini" src="<%= orgImage %>" alt="<%= event.organization.name %>" />
                    <strong>Organization:</strong>
                    <a href="/organizations/<%= event.organization._id %>"><%= event.organization.name %></a>
                  </div>
                <% } %>
                <% if (event.owner) { %>
                  <% const ownerAvatar = event.owner.avatar && event.owner.avatar.startsWith('http') ? event.owner.avatar : `/uploads/${event.owner.avatar || 'default.png'}`; %>
                  <div class="inline-avatar mt-2">
                    <img class="avatar-mini" src="<%= ownerAvatar %>" alt="<%= event.owner.username %>" />
                    <strong>Creator:</strong>
                    <a href="/users/<%= event.owner._id %>"><%= event.owner.username %></a>
                  </div>
                <% } %>
                <% if (event.location) { %>
                  <p class="event-meta"><strong>Location:</strong> <%= event.location %></p>
                <% } %>
                <% if (event.capacity) { %>
                  <p class="event-meta"><strong>Capacity:</strong> <%= event.capacity %></p>
                <% } %>
                <p class="mt-4"><%= event.description %></p>
              </div>
            </div>
            <div class="col-lg-5 fade-up fade-delay-1">
              <div class="event-card">
                <h4 class="section-title">Event Actions</h4>
                <% if (currentUser && canSubscribe) { %>
                  <% if (!isSubscribed) { %>
                    <form action="/events/<%= event._id %>/subscribe" method="POST" class="mb-2">
                      <button type="submit" class="btn btn-coral w-100">Подписаться</button>
                    </form>
                  <% } else { %>
                    <form action="/events/<%= event._id %>/unsubscribe" method="POST" class="mb-2">
                      <button type="submit" class="btn btn-outline-dark w-100">Отписаться</button>
                    </form>
                  <% } %>
                <% } else if (!currentUser) { %>
                  <p class="text-muted">Войдите, чтобы подписаться на событие.</p>
                <% } else { %>
                  <p class="text-muted">Вы создатель события.</p>
                <% } %>

                <% if (canEdit) { %>
                  <a class="btn btn-outline-dark w-100 mb-2" href="/events/<%= event._id %>/edit">Edit Event</a>
                <% } %>
                <% if (canDelete) { %>
                  <form action="/events/<%= event._id %>/delete" method="POST">
                    <button type="submit" class="btn btn-coral w-100">Delete Event</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Explore more events and volunteer opportunities.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

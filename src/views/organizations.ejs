<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Organizations</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="section-title mb-0">Organizations</h2>
          <% if (currentUser) { %>
            <a class="btn btn-coral" href="/organizations/new">Create Organization</a>
          <% } %>
        </div>
        <div class="row g-4">
          <% if (!organizations.length) { %>
            <div class="col-12">
              <div class="event-card">No organizations yet.</div>
            </div>
          <% } %>
          <% organizations.forEach((org) => { %>
            <div class="col-md-6 col-lg-4 fade-up">
              <div class="event-card">
                <% const orgImage = org.imageUrl && org.imageUrl.startsWith('http') ? org.imageUrl : `/uploads/${org.imageUrl || 'default.png'}`; %>
                <img class="event-image" src="<%= orgImage %>" alt="<%= org.name %>" />
                <h4><%= org.name %></h4>
                <p class="text-muted"><%= org.description || 'No description yet.' %></p>
                <% if (org.owner) { %>
                  <% const ownerAvatar = org.owner.avatar && org.owner.avatar.startsWith('http') ? org.owner.avatar : `/uploads/${org.owner.avatar || 'default.png'}`; %>
                  <div class="inline-avatar mb-3">
                    <img class="avatar-mini" src="<%= ownerAvatar %>" alt="<%= org.owner.username %>" />
                    <span class="text-muted">Owner</span>
                    <a href="/users/<%= org.owner._id %>"><%= org.owner.username %></a>
                  </div>
                <% } %>
                <a class="btn btn-outline-dark btn-sm" href="/organizations/<%= org._id %>">View Organization</a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Manage organizations that host events.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

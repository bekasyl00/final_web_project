<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Organization</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg sticky-top border-bottom">
      <div class="container">
        <a class="navbar-brand brand-mark" href="/">
          <span class="brand-dot"></span>
          PulseBridge
        </a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/organizations">Organizations</a></li>
            <li class="nav-item"><a class="nav-link" href="/events">Events</a></li>
            <% if (currentUser) { %>
              <li class="nav-item"><a class="nav-link" href="/events/new">Create Event</a></li>
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% } else { %>
              <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
              <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <section class="py-5">
      <div class="container">
        <% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="row g-4">
          <div class="col-lg-7 fade-up">
            <div class="event-card">
              <h2 class="section-title"><%= organization.name %></h2>
              <p><%= organization.description || 'No description yet.' %></p>
              <p class="event-meta"><strong>Owner:</strong> <%= organization.owner.username %></p>
            </div>
          </div>
          <div class="col-lg-5 fade-up fade-delay-1">
            <div class="event-card">
              <h4 class="section-title">Actions</h4>
              <% if (canEdit) { %>
                <a class="btn btn-outline-dark w-100 mb-2" href="/organizations/<%= organization._id %>/edit">Edit Organization</a>
              <% } %>
              <% if (canDelete) { %>
                <form action="/organizations/<%= organization._id %>/delete" method="POST">
                  <button type="submit" class="btn btn-coral w-100">Delete Organization</button>
                </form>
              <% } else { %>
                <p class="text-muted">Only admins can delete organizations.</p>
              <% } %>
            </div>
          </div>
        </div>

        <div class="mt-5">
          <h3 class="section-title">Events by this Organization</h3>
          <div class="row g-4">
            <% if (!events.length) { %>
              <div class="col-12">
                <div class="event-card">No events yet.</div>
              </div>
            <% } %>
            <% events.forEach((event) => { %>
              <div class="col-md-6 col-lg-4 fade-up">
                <div class="event-card">
                  <img class="event-image" src="<%= event.imageUrl %>" alt="<%= event.title %>" />
                  <h5><%= event.title %></h5>
                  <p class="event-meta"><%= event.startDate ? event.startDate.toDateString() : '-' %></p>
                  <a class="btn btn-outline-dark btn-sm" href="/events/<%= event._id %>">View Event</a>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Organizations group events and volunteers.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

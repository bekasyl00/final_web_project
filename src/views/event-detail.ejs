<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Event Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg sticky-top border-bottom">
      <div class="container">
        <a class="navbar-brand brand-mark" href="/">
          <span class="brand-dot"></span>
          PulseBridge
        </a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/events">Events</a></li>
            <% if (currentUser) { %>
              <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
              <li class="nav-item"><a class="nav-link" href="/events/new">Create Event</a></li>
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% } else { %>
              <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
              <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <section class="py-5">
      <div class="container">
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (event) { %>
          <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-success"><%= message %></div>
          <% } %>
          <div class="row g-4">
            <div class="col-lg-7 fade-up">
              <div class="event-card">
                <img class="event-image" src="<%= event.imageUrl %>" alt="<%= event.title %>" />
                <h2 class="section-title"><%= event.title %></h2>
                <p class="event-meta"><strong>Date:</strong> <%= formatDate(event.startDate) %></p>
                <% if (event.endDate) { %>
                  <p class="event-meta"><strong>End:</strong> <%= formatDate(event.endDate) %></p>
                <% } %>
                <% if (event.location) { %>
                  <p class="event-meta"><strong>Location:</strong> <%= event.location %></p>
                <% } %>
                <% if (event.capacity) { %>
                  <p class="event-meta"><strong>Capacity:</strong> <%= event.capacity %></p>
                <% } %>
                <p class="mt-4"><%= event.description %></p>
              </div>
            </div>
            <div class="col-lg-5 fade-up fade-delay-1">
              <div class="event-card">
                <h4 class="section-title">Event Actions</h4>
                <% if (canEdit) { %>
                  <a class="btn btn-outline-dark w-100 mb-2" href="/events/<%= event._id %>/edit">Edit Event</a>
                <% } %>
                <% if (canDelete) { %>
                  <form action="/events/<%= event._id %>/delete" method="POST">
                    <button type="submit" class="btn btn-coral w-100">Delete Event</button>
                  </form>
                <% } else { %>
                  <p class="text-muted">Only admins can delete events.</p>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Explore more events and volunteer opportunities.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

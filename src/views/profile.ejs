<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <div class="row g-4">
          <div class="col-lg-5 fade-up">
            <div class="form-panel">
              <h2 class="section-title">Profile</h2>
              <p class="text-muted">Your account details.</p>
              <% if (message) { %>
                <div class="alert alert-success"><%= message %></div>
              <% } %>
              <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
              <% } %>
              <div class="text-center mb-3">
                <img class="avatar-image" src="/uploads/<%= user.avatar || 'default.png' %>" alt="Avatar" />
              </div>
              <ul class="list-unstyled mb-0">
                <li><strong>Username:</strong> <%= user.username %></li>
                <li><strong>Email:</strong> <%= user.email %></li>
                <li><strong>Role:</strong> <%= user.role %></li>
              </ul>
              <div class="mt-4">
                <a class="btn btn-outline-dark w-100" href="/logout">Logout</a>
              </div>
            </div>
          </div>
          <div class="col-lg-7 fade-up fade-delay-1">
            <div class="form-panel">
              <h2 class="section-title">Update Profile</h2>
              <p class="text-muted">Edit your username or email.</p>
              <form id="profileForm" action="/profile" method="POST" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                  <label class="form-label" for="profileUsernameInput">Username</label>
                  <input id="profileUsernameInput" name="username" type="text" class="form-control <%= errors.username ? 'is-invalid' : '' %>" minlength="2" value="<%= values.username || '' %>" />
                  <div class="invalid-feedback"><%= errors.username || 'Имя минимум 2 символа.' %></div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="profileEmailInput">Email</label>
                  <input id="profileEmailInput" name="email" type="email" class="form-control <%= errors.email ? 'is-invalid' : '' %>" value="<%= values.email || '' %>" />
                  <div class="invalid-feedback"><%= errors.email || 'Введите корректный email.' %></div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="profileAvatar">Avatar</label>
                  <input id="profileAvatar" name="avatar" type="file" accept="image/*" class="form-control <%= errors.avatar ? 'is-invalid' : '' %>" />
                  <div class="invalid-feedback"><%= errors.avatar || 'Загрузите изображение.' %></div>
                  <div class="form-text">Если не загрузить, останется default.png.</div>
                </div>
                <button type="submit" class="btn btn-coral w-100">Save Changes</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Profile updates are stored in MongoDB.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge | Post</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { currentUser }) %>

    <section class="py-5">
      <div class="container">
        <% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="row g-4">
          <div class="col-lg-8 fade-up">
            <div class="event-card">
              <h2 class="section-title"><%= post.title %></h2>
              <% if (post.author) { %>
                <% const authorAvatar = post.author.avatar && post.author.avatar.startsWith('http') ? post.author.avatar : `/uploads/${post.author.avatar || 'default.png'}`; %>
                <div class="inline-avatar mb-2">
                  <img class="avatar-mini" src="<%= authorAvatar %>" alt="<%= post.author.username %>" />
                  <span class="text-muted">By</span>
                  <a href="/users/<%= post.author._id %>"><%= post.author.username %></a>
                </div>
              <% } %>
              <% if (post.event) { %>
                <p class="event-meta">Event: <a href="/events/<%= post.event._id %>"><%= post.event.title %></a></p>
              <% } %>
              <p class="mt-4"><%= post.content %></p>
            </div>
          </div>
          <div class="col-lg-4 fade-up fade-delay-1">
            <div class="event-card">
              <h4 class="section-title">Actions</h4>
              <% if (canEdit) { %>
                <a class="btn btn-outline-dark w-100 mb-2" href="/posts/<%= post._id %>/edit">Edit Post</a>
              <% } %>
              <% if (canDelete) { %>
                <form action="/posts/<%= post._id %>/delete" method="POST">
                  <button type="submit" class="btn btn-coral w-100">Delete Post</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
        Community stories and results.
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
